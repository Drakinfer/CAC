{% extends 'base.html.twig' %}

{% block title %}Qui sommes-nous? - Competences Actives Consulting
{% endblock %}

{% block bootstrap %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{% endblock %}

{% block uniquesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/presentation.css') }}">
{% endblock %}

{% block navadmin %}
	<ul class="nav-links">
		<li>
			<a href="{{path('entreprise_edit', {'id': entreprise[0].id})}}">Entreprise</a>
		</li>

		<li>
			<a href="{{path('equipe_index')}}">Equipes</a>
		</li>
		<li>
			<a href="{{path('reseaux_index')}}">Réseaux</a>
		</li>
	</ul>
{% endblock %}

{% block body %}
	<section id="bg">
		<h2 class="centre">{{entreprise[0].nom}}</h2>
		<section id='presentation-entreprise'>
			<article id="img-article">
				<img id="img-entreprise" src="{{asset('images/' ~ entreprise[0].image) }}" alt="présentation de l'entreprise">
			</article>
			<article>
				{% for description in description %}
					<p class="description">{{description.paragraph}}</p>
				{% endfor %}
			</article>

		</section>
		<section>
			<h2 class="centre">Notre Equipe</h2>

			{% if equipes is defined %}
				{% if equipes is not empty %}
					<section id="presentation-equipe">

						{% for equipe in equipes %}
							<div class="container">
								<div class="card">
									<div class="front">
										<h3>{{equipe.prenom}}
											{{equipe.nom}}<span>
												{{equipe.poste}}</span>
										</h3>
										<ul class="ul-card">
											<li class="li-card">{{equipe.phone}}</li>
											<li class="li-card">{{equipe.mail}}</li>
										</ul>
									</div>
								</div>
							</div>
						{% endfor %}
					</section>
				{% endif %}
			{% endif %}
		</section>
	{% endblock %}

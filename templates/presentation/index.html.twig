{% extends 'base.html.twig' %}

{% block title %}Hello PresentationController!
{% endblock %}

{% block bootstrap %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{% endblock %}

{% block navadmin %}
	<ul class="nav-links">
		<li>
			<a href="{{path('entreprise_edit', {'id': entreprise[0].id})}}">Entreprise</a>
		</li>

		<li>
			<a href="{{path('equipe_index')}}">Equipes</a>
		</li>
		<li>
			<a href="{{path('reseaux_index')}}">Réseaux</a>
		</li>
	</ul>
{% endblock %}

{% block body %}
	<h2 class="centre">
		{{entreprise[0].nom}}</h2>
	<section id='presentation-entreprise'>
		<article>
			<p>Enregistré à :</p>
			<p>{{entreprise[0].adresse}}</p>
			<p>{{entreprise[0].codepostal}}</p>
			<p>{{entreprise[0].ville}}</p>
			<p>{{entreprise[0].pays}}</p>
			<p>Téléphone :</p>
			<p>{{entreprise[0].telephone}}</p>
			<p>Mail :</p>
			<p>{{entreprise[0].mail}}</p>
			{% if entreprise[0].heureOuverture is not empty %}
				<p>Ouvert de
					{{entreprise[0].heureOuverture}}
					à
					{{entreprise[0].heureFermeture}}</p>
			{% endif %}
			{% for description in description %}
				<p class="description">{{description.paragraph}}</p>
			{% endfor %}
		</article>
		<article>
			<img src="{{asset('images/' ~ entreprise[0].image) }}" alt="">
		</article>
	</section>
	{% if equipe is defined %}
		{% if equipe is not empty %}
			<section id='presentation-equipe'>
				<h1>Equipe index</h1>

				<table class="table">
					<thead>
						<tr>
							<th>Id</th>
							<th>Nom</th>
							<th>Prenom</th>
							<th>Poste</th>
							<th>Description</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody>
						{% for equipe in equipes %}
							<tr>
								<td>{{ equipe.id }}</td>
								<td>{{ equipe.nom }}</td>
								<td>{{ equipe.prenom }}</td>
								<td>{{ equipe.poste }}</td>
								<td>{{ equipe.description }}</td>
								<td>
									<a href="{{ path('equipe_show', {'id': equipe.id}) }}">show</a>
									<a href="{{ path('equipe_edit', {'id': equipe.id}) }}">edit</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="6">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</section>
		{% endif %}
	{% endif %}
{% endblock %}

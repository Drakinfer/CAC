{% extends 'base.html.twig' %}

{% block title %}Qui sommes-nous? - Competences Actives Consulting
{% endblock %}

{% block bootstrap %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{% endblock %}

{% block navadmin %}
	<ul class="nav-links">
		<li>
			<a href="{{path('entreprise_edit', {'id': entreprise[0].id})}}">Entreprise</a>
		</li>

		<li>
			<a href="{{path('equipe_index')}}">Equipes</a>
		</li>
		<li>
			<a href="{{path('reseaux_index')}}">Réseaux</a>
		</li>
	</ul>
{% endblock %}

{% block body %}
	<section id="bg">
		<h2 class="centre">{{entreprise[0].nom}}</h2>
		<section id='presentation-entreprise'>
			<article id="img-article text-center mx-auto">
				<img id="img-entreprise" src="{{asset('images/' ~ entreprise[0].image) }}" alt="présentation de l'entreprise">
			</article>
			<article>
				{% for description in description %}
					<p class="description">{{description.paragraph}}</p>
				{% endfor %}
			</article>

		</section>
		{% if equipe is defined %}
			{% if equipe is not empty %}
				<section id='presentation-equipe'>
					<h1>Equipe index</h1>

					<table class="table">
						<thead>
							<tr>
								<th>Nom</th>
								<th>Prenom</th>
								<th>Poste</th>
								<th>Description</th>
								<th>actions</th>
							</tr>
						</thead>
						<tbody>
							{% for equipe in equipes %}
								<tr>
									<td>{{ equipe.nom }}</td>
									<td>{{ equipe.prenom }}</td>
									<td>{{ equipe.poste }}</td>
									<td>{{ equipe.description }}</td>
									<td>
										<a href="{{ path('equipe_show', {'id': equipe.id}) }}">show</a>
										<a href="{{ path('equipe_edit', {'id': equipe.id}) }}">edit</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="6">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</section>
			{% endif %}
		{% endif %}
	</section>
{% endblock %}

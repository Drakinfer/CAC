	<h2>{{ equipe.nom }}
		{{ equipe.prenom }}</h2>

	<table class="table">
		<tbody>
			<tr>
				<th>Nom</th>
				<td>{{ equipe.nom }}</td>
			</tr>
			<tr>
				<th>Prenom</th>
				<td>{{ equipe.prenom }}</td>
			</tr>
			<tr>
				<th>Poste</th>
				<td>{{ equipe.poste }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ equipe.description }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('equipe_index') }}">Revenir à la liste</a>

	<a href="{{ path('equipe_edit', {'id': equipe.id}) }}">Modifier</a>


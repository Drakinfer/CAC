{% extends 'base.html.twig' %}

{% block title %}Equipe index
{% endblock %}

{% block bootstrap %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{% endblock %}

{% block navadmin %}
	<ul class="nav-links">
		<li>
			<a href="{{path('entreprise_edit', {'id': 1})}}">Entreprise</a>
		</li>

		<li>
			<a href="{{path('equipe_index')}}">Equipes</a>
		</li>
		<li>
			<a href="{{path('reseaux_index')}}">Réseaux</a>
		</li>
	</ul>
{% endblock %}

{% block body %}
	<h2>Liste services</h2>

	<table class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for service_equipe in service_equipes %}
				<tr>
					<td>{{ service_equipe.name }}</td>
					<td>
						<a href="{{ path('service_equipe_edit', {'id': service_equipe.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Pas d'enregistrement trouvés</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('service_equipe_new') }}">Créer nouveau service</a>

	<h2>Liste des membres</h2>

	<table class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Prenom</th>
				<th>Poste</th>
				<th>Description</th>
				<th>Service</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for equipe in equipes %}
				<tr>
					<td>{{ equipe.nom }}</td>
					<td>{{ equipe.prenom }}</td>
					<td>{{ equipe.poste }}</td>
					<td>{{ equipe.description }}</td>
					<td>{{ equipe.service }}</td>
					<td>
						<a href="{{ path('equipe_show', {'id': equipe.id}) }}">show</a>
						<a href="{{ path('equipe_edit', {'id': equipe.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">Pas d'enregistrement</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('equipe_new') }}">Ajouter un membre</a>
{% endblock %}

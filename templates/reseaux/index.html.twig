{% extends 'base.html.twig' %}

{% block title %}Reseaux index
{% endblock %}

{% block bootstrap %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{% endblock %}

{% block navadmin %}
	<ul class="nav-links">
		<li>
			<a href="{{path('entreprise_edit', {'id': entreprise.id})}}">Entreprise</a>
		</li>

		<li>
			<a href="{{path('equipe_index')}}">Equipes</a>
		</li>
		<li>
			<a href="{{path('reseaux_index')}}">Réseaux</a>
		</li>
	</ul>
{% endblock %}

{% block body %}
	<h2>Liste des Réseaux</h2>

	<table class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Logo</th>
				<th>Lien</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for reseaux in reseaux %}
				<tr>
					<td>{{ reseaux.nom }}</td>
					<td>{{ reseaux.logo }}</td>
					<td>{{ reseaux.lien }}</td>
					<td>
						<a href="{{ path('reseaux_show', {'id': reseaux.id}) }}" class="button">show</a>
						<a href="{{ path('reseaux_edit', {'id': reseaux.id}) }}" class="button">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Pas d'enregistrement trouvés</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('reseaux_new') }}" class="button">Créer nouveau</a>
{% endblock %}

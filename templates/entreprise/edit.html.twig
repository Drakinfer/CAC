{% extends 'base.html.twig' %}

{% block title %}Modifier les informations de l'entreprise - CAC
{% endblock %}

{% block bootstrap %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{% endblock %}

{% block navadmin %}
	<ul class="nav-links">
		<li>
			<a href="{{path('entreprise_edit', {'id': entreprise.id})}}">Entreprise</a>
		</li>

		<li>
			<a href="{{path('equipe_index')}}">Equipes</a>
		</li>
		<li>
			<a href="{{path('reseaux_index')}}">Réseaux</a>
		</li>
	</ul>
{% endblock %}

{% block body %}
	<h2 class="centre">Modifier les informations de l'entreprise</h2>

	{{ include('entreprise/_form.html.twig', {'button_label': 'Modifier'}) }}

	<h2 class="centre">Paragraphes de Description</h2>

	<table class="table">
		<thead>
			<tr>
				<th>Titre</th>
				<th>Paragraphe</th>
				<th>Position</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for description in descriptions %}
				<tr>
					<td>{{ description.titre }}</td>
					<td>{{ description.paragraph }}</td>
					<td>{{ description.position }}</td>
					<td>
						<a href="{{ path('description_show', {'id': description.id}) }}" class="button">show</a>
						<a href="{{ path('description_edit', {'id': description.id}) }}" class="button">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">Pas d'enregistrement trouvés</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('description_new') }}" class="button">Rajouter paragraphe</a>

	<a href="{{path('presentation', {'id': entreprise.id})}}" class="button">Revenir à la page de présentation</a>
{% endblock %}

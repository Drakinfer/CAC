{% extends 'base.html.twig' %}

{% block title %}Partenaire index
{% endblock %}

{% block bootstrap %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{% endblock %}

{% block navadmin %}
	<ul class="nav-links">
		<li>
			<a href="{{path('entreprise_edit', {'id': entreprise.id})}}">Entreprise</a>
		</li>

		<li>
			<a href="{{path('equipe_index')}}">Partenaires</a>
		</li>
		<li>
			<a href="{{path('reseaux_index')}}">Réseaux</a>
		</li>
	</ul>
{% endblock %}

{% block body %}
    <h2>Liste services</h2>

	<table class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for service_partenaire in service_partenaires %}
				<tr>
					<td>{{ service_partenaire.name }}</td>
					<td>
						<a href="{{ path('service_partenaire_edit', {'id': service_partenaire.id}) }}">modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Pas d'enregistrement trouvés</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('service_partenaire_new') }}">Créer nouveau service</a>

    <h1>Liste des Partenaires</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Lien</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for partenaire in partenaires %}
            <tr>
                <td>{{ partenaire.id }}</td>
                <td>{{ partenaire.nom }}</td>
                <td>{{ partenaire.lien }}</td>
                <td>{{ partenaire.image }}</td>
                <td>
                    <a href="{{ path('partenaire_show', {'id': partenaire.id}) }}">Afficher</a>
                    <a href="{{ path('partenaire_edit', {'id': partenaire.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement retrouvés. </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('partenaire_new') }}">Création d'un partenaire</a>
{% endblock %}

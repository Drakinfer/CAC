{% extends 'base.html.twig' %}

{% block title %}Services{% endblock %}

{% block stylesheets %}
			<link rel="stylesheet" href=" {{ asset('assets/css/style.css') }} ">
			<link rel="stylesheet" href=" {{ asset('assets/css/Services.css') }} ">
		{% endblock %}
{% block body %}
    <h1>Bienvenue administrateur dans la partie service</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Position</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.id }}</td>
                <td>{{ service.name }}</td>
                <td>{{ service.position }}</td>
                <td>
                    <a href="{{ path('services_show', {'id': service.id}) }}" id="icone">Voir</a>
                    <a href="{{ path('services_edit', {'id': service.id}) }}"id="icone">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun service trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('services_new') }}"id="icone">Ajouter un nouveau service</a>
{% endblock %}

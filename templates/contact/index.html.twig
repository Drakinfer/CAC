{% extends 'base.html.twig' %}

{% block uniquesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/contact.css') }}">
{% endblock %}

{% block body %}
<section class="contact">
<div class="contactez-nous">
<h1>Contactez-nous</h1>
<p>Un problème, une question, envie de nous envoyer un message d’amour ? N’hésitez pas à utiliser ce formulaire pour prendre contact avec nous !</p>

<form action="/page-traitement-donnees" method="post">
<div class="bg-white p-5 contact-form">
    <div class="form-group">

{{ form_start(our_form) }}
  <label for="nom">{{ form_row(our_form.fullName, {'attr': {'class': 'form-control'}}) }}</label>
</div>

<div class="form-group">
    <label for="email">{{ form_row(our_form.email, {'attr': {'class': 'form-control'}}) }}</label>
</div>

<div class="form-group">
  <label for="message">{{ form_row(our_form.Message, {'attr': {'class': 'form-control'}}) }}</label>
</div>

<div class="form-group">
    <input type="submit" value="Send" class="btn btn-primary py-3 px-5">
</div>

{{ form_end(our_form) }}
</div>
</div>
</section>
{% endblock %}

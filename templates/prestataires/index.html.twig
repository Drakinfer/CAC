{% extends 'base.html.twig' %}

{% block title %}Prestataires index{% endblock %}

{% block body %}
    <h1>Prestataires index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Telephone</th>
                <th>Mail</th>
                <th>Site</th>
                <th>Description</th>
                <th>Image</th>
                <th>Position</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for prestataire in prestataires %}
            <tr>
                <td>{{ prestataire.id }}</td>
                <td>{{ prestataire.nom }}</td>
                <td>{{ prestataire.telephone }}</td>
                <td>{{ prestataire.mail }}</td>
                <td>{{ prestataire.site }}</td>
                <td>{{ prestataire.description }}</td>
                <td>{{ prestataire.image }}</td>
                <td>{{ prestataire.position }}</td>
                <td>
                    <a href="{{ path('prestataires_show', {'id': prestataire.id}) }}">show</a>
                    <a href="{{ path('prestataires_edit', {'id': prestataire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('prestataires_new') }}">Create new</a>
{% endblock %}

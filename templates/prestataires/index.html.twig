{% extends 'base.html.twig' %}

{% block title %}Liste des Prestataires - CAC
{% endblock %}

{% block bootstrap %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{% endblock %}

{% block navadmin %}
	<ul class="nav-links">
		<li>
			<a href="{{path('prestataires_index')}}">Admin</a>
		</li>
	</ul>
{% endblock %}

{% block body %}
	<h2>Liste des Prestataires</h2>

	<table class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Telephone</th>
				<th>Mail</th>
				<th>Site</th>
				<th>Description</th>
				<th>Image</th>
				<th>Position</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for prestataire in prestataires %}
				<tr>
					<td>{{ prestataire.nom }}</td>
					<td>{{ prestataire.telephone }}</td>
					<td>{{ prestataire.mail }}</td>
					<td>{{ prestataire.site }}</td>
					<td>{{ prestataire.description }}</td>
					<td>{{ prestataire.image }}</td>
					<td>{{ prestataire.position }}</td>
					<td>
						<a href="{{ path('prestataires_show', {'id': prestataire.id}) }}" class="button">show</a>
						<a href="{{ path('prestataires_edit', {'id': prestataire.id}) }}" class="button">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">Pas d'enregistrement trouvés</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('prestataires_new') }}" class="button">Créer nouveau</a>
{% endblock %}
